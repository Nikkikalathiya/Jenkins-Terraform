pipeline {
    agent any

    
    environment {
       AWS_ACCESS_KEY_ID     = credentials('b1b4d7c3-be1e-4158-acfa-413eab8faa39')
       AWS_SECRET_ACCESS_KEY = credentials('4198ef67-1140-4838-a766-2e67a3161862')
    }

    stages {
      stage('fetch_latest_code') {
        steps {
        git branch: 'master', url: 'https://github.com/Nikkikalathiya/Jenkins-Terraform.git'
 }
      }
    
      stage('TF Init&Plan') {
        steps {
          sh 'terraform init'
          sh 'terraform plan'
          }
      }

      stage('Manual Approval') {
            steps {
      input(id: 'manual-approval', message: 'Do you want to proceed?', ok: 'Proceed')
            }
        }

       stage('TF Apply') {
        steps {
          sh 'terraform apply -auto-approve'
        }
      
    } 
  }
}
