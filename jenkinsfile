pipeline {
    agent any

    
    environment {
       AWS_ACCESS_KEY_ID     = credentials('62c63dbe-48d7-4e18-9e24-10f102d9c9c0')
       AWS_SECRET_ACCESS_KEY = credentials('483c42d4-5d80-499b-a0ac-847711ebb6ea')
    }

    stages {
      stage('fetch_latest_code') {
        steps {
        git branch: 'master', url: 'https://github.com/Nikkikalathiya/Jenkins-Terraform.git'
 }
      }
    
      stage('TF Init&Plan') {
        steps {
          sh 'terraform init'
          sh 'terraform plan'
          }
      }

      stage('Manual Approval') {
            steps {
      input(id: 'manual-approval', message: 'Do you want to proceed?', ok: 'Proceed')
            }
        }

       stage('TF Apply') {
        steps {
          sh 'terraform apply -auto-approve'
        }
      
    } 
  }
}
